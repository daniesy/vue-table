{
  "name": "@daniesy/vue-table",
  "version": "1.0.1",
  "main": "./dist/vue-table.common.js",
  "files": [
    "dist/*",
    "src/*",
    "*.json"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-bundle": "vue-cli-service build --target lib --name vue-table ./src/index.js",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-service": "^5.0.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "minimist": ">=1.2.2",
    "prettier": "^3.0.0",
    "sass": "^1.60.0",
    "sass-loader": "^13.0.0"
  },
  "author": "Dan Florian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daniesy/vue-table.git"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "rules": {
      "vue/multi-word-component-names": "off",
      "vue/no-reserved-component-names": "off"
    },
    "parserOptions": {
      "ecmaVersion": 2020
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
